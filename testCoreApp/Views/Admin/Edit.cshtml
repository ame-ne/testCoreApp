@model Book

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <div><span asp-validation-for="Title" class="text-danger"></span></div>
        <textarea asp-for="Title" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PageSize"></label>
        <div><span asp-validation-for="PageSize" class="text-danger"></span></div>
        <input asp-for="PageSize" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShelfIndex"></label>
        <input asp-for="ShelfIndex" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Available"></label>
        <input asp-for="Available" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

