@model IEnumerable<Book>
@using testCoreApp.Extentions
@{
    ViewData["Title"] = "Book's List";
}

<h2>Book's List</h2>

<table>
    <thead>
        <tr>
            <th>Название</th>
            <th>Авторы</th>
            <th>Жанры</th>
            <th>Полочный индекс</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>
                    @foreach (var a in b.Authors)
                    {
                        <a href="@a.AuthorId">@a.GetShortName()</a><text>&nbsp;</text>
                    }
                </td>
                <td>
                    @foreach (var g in b.Genres)
                    {
                        <i>@g.Name; </i>
                    }
                </td>
                <td>@b.ShelfIndex</td>
            </tr>
        }
        </tbody>
</table>